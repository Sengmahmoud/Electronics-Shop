
@model ProductViewModel
<partial name="/Views/Shared/_message.cshtml" />
<form method="post" enctype="multipart/form-data">
<div class="container">
<div class="row">
    <input type="text" hidden asp-for="Product.Id" />
    <input type="text" hidden asp-for="Product.ImagePath" />
    
    <div class="form-group form-work-data col-md-6">
        <label asp-for="Product.Name" class="text-md-right">
        </label>
        <input type="text" asp-for="Product.Name" class="form-control">
        <span asp-validation-for="Product.Name" class="text-danger field-validation-error"></span>

    </div>
         <div class="form-group form-work-data col-md-6">
        <label asp-for="Product.CategoryId" class="text-md-right">
        </label>
        <select type="text" asp-for="Product.CategoryId" asp-items="Model.CategoriesList" class="form-control">
            <option value="" selected>Select Category</option>
        </select>
        <span asp-validation-for="Product.CategoryId" class="text-danger field-validation-error"></span>

    </div>
    <div class="form-group form-work-data col-md-6">
        <label asp-for="Product.Price" class="text-md-right">
        </label>
        <input type="text" asp-for="Product.Price" class="form-control">
        <span asp-validation-for="Product.Price" class="text-danger field-validation-error"></span>

    </div>
 

       <div class="form-group form-work-data col-md-6">
        <label asp-for="Product.Discount" class="text-md-right">
        </label>
        <input type="text" asp-for="Product.Discount" class="form-control">
        <span asp-validation-for="Product.Discount" class="text-danger field-validation-error"></span>

    </div>
 
     <div class="form-group form-work-data col-md-6">
        <label asp-for="Product.ImagePath" class="text-md-right">
        </label>
        <input type="file" asp-for="Product.Image" value="Upload Photo" class="form-control">
        <span asp-validation-for="Product.Image" class="text-danger field-validation-error"></span>

    </div>
           <div class="form-group form-work-data col-md-12">
        <label asp-for="Product.Description" class="text-md-right">
        </label>
        <textarea  asp-for="Product.Description" class="form-control"></textarea>

    </div>
   
</div>
</div>

 <div class="form-group">
                <button class="btn btn-danger" type="submit">
                    <i class="fa fa-save"></i>&nbsp;Save
                </button>
            </div>
</form>
<script type="text/javascript">
    $(function(){
           $("#products").addClass("menu-open");
            $("#productsList").addClass("bg-gradient-primary");

    })
</script>
